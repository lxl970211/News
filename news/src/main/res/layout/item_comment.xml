<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tv_comment_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/man"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_comment_name"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="root"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:textSize="17sp"/>


            <TextView
                android:id="@+id/tv_comment_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="一小时前"
                android:paddingTop="5dp"
                />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:textSize="15sp"
        android:text="你好小娜"
        android:id="@+id/tv_comment_content" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:paddingRight="10dp"
        >
        <TextView
            style="@style/CommentfunctionTextViewStyle"
            android:id="@+id/tv_reply"
            android:text="@string/reply"
            android:layout_alignParentRight="true"
            />
        <TextView
            style="@style/CommentfunctionTextViewStyle"
            android:id="@+id/tv_contra"
            android:text="@string/contra"
            android:layout_toLeftOf="@id/tv_reply"
            />
        <TextView
            style="@style/CommentfunctionTextViewStyle"
            android:id="@+id/tv_buttress"
            android:text="@string/buttress"
            android:layout_toLeftOf="@id/tv_contra"
            />


    </RelativeLayout>

</LinearLayout>
